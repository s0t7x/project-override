{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true, 
        "allowSyntheticDefaultImports": true, 
        "esModuleInterop": true, 
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@project-override/shared": [
                "../shared/src/index.ts"
            ],
            "@project-override/shared/*": [
                "../shared/src/*"
            ]
        },
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true, 
        "noImplicitReturns": true,
        "noEmit": true,
        "composite": false,
        "declaration": true,
        "declarationMap": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        {
            "path": "../shared"
        }
    ]
}